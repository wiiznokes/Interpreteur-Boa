{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "make",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "clean"
            ]
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        }
    ],
    "version": "2.0.0"
}
