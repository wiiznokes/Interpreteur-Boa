

fun mod_x(int x, int mod): int {
    if (x == 0) {
        return 0;
    }
    
    if (x < mod) {
        return 1;
    } else {
        return mod_x(x - mod, mod);
    }
}





fun est_premier(int n, int state): int {

   if (state == 1) {
        return 1;
   }

    if (!mod_x(n, state)) {
        return 0;
    }

    return est_premier(n, state - 1);

}






